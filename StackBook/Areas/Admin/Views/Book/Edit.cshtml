@model StackBook.ViewModels.BookDetailViewModel

<div class="container">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row pb-2">
			<div class="col-12 text-center">
				<h2 class="text-primary">Edit Book</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		@* Buộc phải có enctype nếu có form <input type="file"> *@
		<form method="post" class="row" enctype="multipart/form-data">
			<input asp-for="BookId" hidden />
			<input asp-for="ImageURL" hidden />
			<div class="border p-3 mt-4">
				<div class="form-floating mb-3">
					@* Lấy text label thông qua DisplayName = BookName *@
					<input asp-for="BookTitle" class="form-control" />
					<label asp-for="BookTitle" class=" pb-2"></label>
					<span asp-validation-for="BookTitle" class="text-danger"></span>
				</div>
				<div class="row">
					<div class="col-6">
						<div class="form-floating mb-3">
							<input type="file" name="file" class="form-control" />
							<label for="file" asp-for="ImageURL" class=" pb-2"></label>
							@* <!-- File Upload --> *@
							@* <input type="file" name="file" id="fileInput" class="form-control" onchange="toggleInputs('file')" /> *@

							@* <!-- URL Input --> *@
							@* <input asp-for="ImageURL" id="urlInput" class="form-control mt-2" placeholder="Or enter image URL..." oninput="toggleInputs('url')" /> *@

							@* <label asp-for="ImageURL" class="pb-2">Upload an Image or Enter a URL</label> *@
							<!-- Hidden Input to Store Image URL -->
							@* <input type="hidden" id="ImageURL" name="ImageURL" /> *@
							@* <img id="previewImage" src="" style="width: 100%; max-height: 300px; margin-top: 10px; display: none;" /> *@
						</div>
						<div class="mb-3 form-floating">
							<select asp-for="CategoryName" asp-items="ViewBag.CategoryList" class="form-select pb-2">
								<option disabled selected>--Select Category--</option>
							</select>
							<label asp-for="CategoryName" class=" pb-2"></label>
							<span asp-validation-for="CategoryName" class="text-danger"></span>
						</div>
						<div class="form-floating mb-3">
							<input asp-for="Price" class="form-control" />
							<label asp-for="Price" class=" pb-2"></label>
							<span asp-validation-for="Price" class="text-danger"></span>
						</div>
						<div class="form-floating mb-3">
							<input asp-for="Stock" class="form-control" />
							<label asp-for="Stock" class=" pb-2"></label>
							<span asp-validation-for="Stock" class="text-danger"></span>
						</div>
						<div class="form-floating mb-3">
							<input asp-for="CreatedBook" class="form-control" />
							<label asp-for="CreatedBook" class=" pb-2"></label>
							<span asp-validation-for="CreatedBook" class="text-danger"></span>
						</div>
					</div>
					<div class="col-6 card-image">
						<img src="@Model?.ImageURL"  style="width: 100% !important;" />
					</div>
				</div>

				<div class=" mb-3">
					<label asp-for="AuthorsName" class="pb-2 text-muted"></label>
					<div id="author-container">
						@if (Model?.AuthorsName != null && Model.AuthorsName.Count > 0)
						{
							for (int i = 0; i < Model.AuthorsName.Count; i++)
							{
								<div class="mb-3 d-flex flex-sm-row author-item">
									<input asp-for="AuthorsName[i]" readonly class="form-control" />
									<button onclick="removeAuthor(this)" type="button" class="btn btn-secondary mx-2"><i class="fa-solid fa-delete-left "></i></button>
								</div>
							}
						}
					</div>
					<span asp-validation-for="AuthorsName" class="text-danger"></span>
					<div class="mb-3">
						<select id="new-author" onchange="addAuthor()" asp-items="ViewBag.AuthorList" class="form-select pb-2">
							<option disabled selected>--Select Author--</option>
						</select>
					</div>
				</div>



				<div class=" mb-3">
					<label asp-for="Description" class="p-0 text-muted"></label>
					<textarea asp-for="Description" class="form-control"></textarea>
				</div>


				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Edit</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-area="Admin" asp-controller="Book" asp-action="Index" class="btn btn-secondary form-control">
							Back to list
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

