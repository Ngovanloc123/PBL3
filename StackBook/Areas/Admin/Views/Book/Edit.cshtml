@model StackBook.ViewModels.BookVM

@{

    ViewData["Title"] = "Edit Book";
}

<div class="container mt-4">
    <h1 class="text-primary text-center">Edit Book</h1>
    <hr />
    @* [POST] admin/book/edit *@
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="BookId" type="hidden" />
        <input asp-for="ImageURL" type="hidden" />

        <div class="row">
            <div class="col-md-6">
                <!-- Book Title -->
                <div class="mb-3">
                    <label asp-for="BookTitle" class="form-label">Book Title</label>
                    <input asp-for="BookTitle" class="form-control" />
                    <span asp-validation-for="BookTitle" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Price -->
                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Stock -->
                <div class="mb-3">
                    <label asp-for="Stock" class="form-label">Stock</label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <!-- Created Date -->
                <div class="mb-3">
                    <label asp-for="CreatedBook" class="form-label">Created Date</label>
                    <input asp-for="CreatedBook" class="form-control" type="date" />
                    <span asp-validation-for="CreatedBook" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <!-- Book Image -->
                <div class="mb-3">
                    <label class="form-label">Current Image</label>
                    <div class="mb-2">
                        <img src="@Model.ImageURL" alt="Book Image" class="img-fluid rounded" style="max-height: 200px;" />
                    </div>
                    <label asp-for="ImageURL" class="form-label">Upload New Image</label>
                    <input type="file" name="file" class="form-control" />
                </div>

                <!-- Categories (Multi-Select) -->
                <div class="mb-3">
                    <label asp-for="SelectedCategoryIds" class="form-label">Categories</label>
                    <select asp-for="SelectedCategoryIds" asp-items="Model.Categories" class="form-select" multiple>
                    </select>
                    <span asp-validation-for="SelectedCategoryIds" class="text-danger"></span>
                </div>

                <!-- Authors (Multi-Select) -->
                <div class="mb-3">
                    <label asp-for="SelectedAuthorIds" class="form-label">Authors</label>
                    <select asp-for="SelectedAuthorIds" asp-items="Model.Authors" class="form-select" multiple>
                    </select>
                    <span asp-validation-for="SelectedAuthorIds" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Submit Buttons -->
        <div class="row mt-4">
            <div class="col-md-3  my-sm-2">
                <button type="submit" class="btn btn-primary w-100">Save Changes</button>
            </div>
            <div class="col-md-3 my-sm-2">
                <a asp-action="Index" class="btn btn-secondary w-100">Back to List</a>
            </div>
        </div>
    </form>
</div>