@model IEnumerable<StackBook.Models.Book>

@{
       
    ViewData["Title"] = "Books";
}

<div class="container ">
    <h1 class="text-primary text-center">Books</h1>
    <hr />
    <a asp-action="Create" class="btn btn-success mb-3">Add New Book</a>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Authors</th>
                <th>Categories</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.BookTitle</td>
                    <td>@book.Price.ToString("C")</td>
                    <td>@book.Stock</td>
                    <td>
                        @string.Join(", ", book.Authors.Select(a => a.AuthorName))
                    </td>
                    <td>
                        @string.Join(", ", book.Categories.Select(c => c.CategoryName))
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-bookId="@book.BookId" class="btn btn-primary btn-sm ">Edit</a>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-book-id="@book.BookId" data-book-title="@book.BookTitle">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the book <strong id="bookTitle"></strong>?</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post" asp-action="Delete">
                    <input type="hidden" id="bookId" name="bookId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
      
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget; 
            const bookId = button.getAttribute('data-book-id'); 
            const bookTitle = button.getAttribute('data-book-title'); 

            
            const modalTitle = deleteModal.querySelector('#bookTitle');
            const deleteForm = deleteModal.querySelector('#deleteForm');
            const bookIdInput = deleteModal.querySelector('#bookId');

            modalTitle.textContent = bookTitle;
            bookIdInput.value = bookId;
        });
    </script>
}
