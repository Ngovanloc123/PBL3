@model List<StackBook.ViewModels.BookAllInforViewModel>




<div class="container">
	<div class="row pt-4 pb-4">
		<div class="col-6">
			<h1 class="text-primary">Book List</h1>

		</div>
		<div class="col-6 text-end">
			<a asp-area="Admin" asp-controller="Book" asp-action="Create" class="btn btn-primary">
				<i class="fa-solid fa-plus"></i> Create New Book
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Description</th>
				<th>Author</th>
				<th>Price</th>
				<th>Stock</th>
				<th>Publication Date</th>
				<th>Category</th> 
				<th>Image URL</th>

				<th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>@obj.BookTitle</td>
					<td>@obj.Description</td>
					<td>AuthorsName List</td>
					<td>@obj.Price$</td>
					<td>@obj.Stock</td>
					<td>@obj.CreatedBook</td>
					<td>@obj.CategoryName</td>
					<td>@obj.ImageURL</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-area="Admin" asp-controller="Book" asp-action="Edit" asp-route-BookId="@obj.BookId" class="btn btn-primary mx-2">
								<i class="fa-solid fa-pen-to-square"></i> Edit
							</a>
							<a asp-area="Admin" asp-controller="Book" asp-action="Delete" asp-route-BookId="@obj.BookId" class="btn btn-danger mx-2">
								<i class="fa-solid fa-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>