@model Category

<div class="container">
	<form method="post">
		 <input asp-for="CategoryId" hidden /> 
		<div class="border p-3 mt-4">
			<div class="row pb-2">
				<h2 class="text-primary">Delete Category</h2>
				<hr />
			</div>
			<div class="mb-3">
				@* Lấy text label thông qua DisplayName = CategoryName *@
				<label asp-for="CategoryName" class=" pb-2"></label>
				@* Không thể chỉnh sửa *@
				<input asp-for="CategoryName" disabled class="form-control" />
			</div>
			<div class="mb-3">
				<label asp-for="DisplayOrder" class=" pb-2"></label>
				<input asp-for="DisplayOrder" disabled class="form-control" />
			</div>
			<div class="row">
				<div class="col-6 col-md-3">
					<button type="submit" class="btn btn-danger form-control">Delete</button>
				</div>
				<div class="col-6 col-md-3">
					<a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
						Back to list
					</a>
				</div>
			</div>
		</div>
	</form>
</div>