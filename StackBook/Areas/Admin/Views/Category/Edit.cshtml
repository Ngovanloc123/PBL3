@model Category

<div class="container">
	<form method="post">
		@* <input asp-for="CategoryId" hidden /> *@
		<div class="border p-3 mt-4">
			<div class="row pb-2">
				<h2 class="text-primary">Edit Category</h2>
				<hr />
			</div>
			<div class="mb-3">
				@* Lấy text label thông qua DisplayName = CategoryName *@
				<label asp-for="CategoryName" class=" pb-2"></label>
				<input asp-for="CategoryName" class="form-control" />
				<span asp-validation-for="CategoryName" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="DisplayOrder" class=" pb-2"></label>
				<input asp-for="DisplayOrder" class="form-control" />
				<span asp-validation-for="DisplayOrder" class="text-danger"></span>
			</div>
			<div class="row">
				<div class="col-6 col-md-3">
					<button type="submit" class="btn btn-primary form-control">Edit</button>
				</div>
				<div class="col-6 col-md-3">
					<a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
						Back to list
					</a>
				</div>
			</div>
		</div>

	</form>
</div>

@* Dùng để gửi dữ liệu từ form, cập nhật database. Dữ liệu không hiển thị trên URL. *@
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}