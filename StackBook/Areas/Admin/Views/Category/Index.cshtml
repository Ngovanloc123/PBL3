@model List<Category>




<div class="container">
	<div class="row pt-4 pb-4">
		<div class="col-6">
			<h1 class="text-primary">Category List</h1>

		</div>
		<div class="col-6 text-end">
			<a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="fa-solid fa-plus"></i> Create New Category
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.OrderBy(e => e.DisplayOrder))
			{
				<tr>
					<td>@obj.CategoryName</td>
					<td>@obj.DisplayOrder</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-CategoryId="@obj.CategoryId" class="btn btn-primary mx-2">
								<i class="fa-solid fa-pen-to-square"></i> Edit
							</a>
							<a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-CategoryId="@obj.CategoryId" class="btn btn-danger mx-2">
								<i class="fa-solid fa-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>