@model IEnumerable<StackBook.Models.Category>

@{
    ViewData["Title"] = "Manager Category";
}
<div class="container mt-4">
    <h1 class="text-primary text-center">Category List</h1>
    <hr />
    <a asp-action="Create" class="btn btn-success mb-3">Add New Category</a>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var category in Model.OrderBy(c => c.DisplayOrder))
                {
                    <tr>
                        <td>@index</td>
                        <td>@category.CategoryName</td>
                        <td>@category.DisplayOrder</td>
                        <td>
                            <a style="width: 70px;" asp-action="Edit" asp-route-CategoryId="@category.CategoryId" class="btn btn-primary btn-sm"><i class="fa-solid fa-pen-to-square"></i>  Edit</a>
                            <button style="width: 70px;" type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" data-category-id="@category.CategoryId" data-category-name="@category.CategoryName">
                                <i class="fa-solid fa-trash"></i> Delete</button>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No categories found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the category <strong id="categoryName"></strong>?</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post" asp-action="Delete">
                    <input type="hidden" id="categoryId" name="CategoryId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const categoryId = button.getAttribute('data-category-id');
            const categoryName = button.getAttribute('data-category-name');

            const modalTitle = deleteModal.querySelector('#categoryName');
            const deleteForm = deleteModal.querySelector('#deleteForm');
            const categoryIdInput = deleteModal.querySelector('#categoryId');

            modalTitle.textContent = categoryName;
            categoryIdInput.value = categoryId;
        });
    </script>
}