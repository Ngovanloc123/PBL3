@model List<Category>




<div class="container">
	<div class="row pt-4 pb-4">
		<div class="col-6">
			<h1 class="text-primary">Category List</h1>

		</div>
		<div class="col-6 text-end">
			<a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="fa-solid fa-plus"></i> Create New Category
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					#
				</th>
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>
			</tr>
		</thead>
		<tbody>
			@{
				var index = 1;
			}
			@foreach (var obj in Model.OrderBy(e => e.DisplayOrder))
			{
				<tr>
					<td>@index</td>
					<td>@obj.CategoryName</td>
					<td>@obj.DisplayOrder</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-CategoryId="@obj.CategoryId" class="btn btn-primary mx-2">
								<i class="fa-solid fa-pen-to-square"></i> Edit
							</a>
							<a data-bs-id=@obj.CategoryId class="btn btn-danger" data-bs-toggle="modal"
							   data-bs-target="#delete-category-modal">
								<i class="fa-solid fa-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>
				index++;
			}

		</tbody>
	</table>
</div>

@* Confirm modal delete Category *@
<div id="delete-category-modal" class="modal" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header d-flex justify-content-between">
				<h5 class="modal-title">Delete category?</h5>
				<button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>

			<div class="modal-body">
				<p>Are you sure you want to delete this category?</p>
			</div>
			<div class="modal-footer">
				<button id="btn-delete-category" type="button" class="btn btn-danger">Delete</button>
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
			</div>
		</div>
	</div>
</div>

<form method="POST" name="delete-category-form"></form>

<script>
	document.addEventListener('DOMContentLoaded', function () {
		const deleteCategoryModal = document.getElementById('delete-category-modal');
		const deleteForm = document.forms['delete-category-form'];
		const btnDeleteCategory = document.getElementById('btn-delete-category');

		if (deleteCategoryModal) {
			deleteCategoryModal.addEventListener('show.bs.modal', function (event) {
				const button = event.relatedTarget;
				const categoryId = button.getAttribute('data-bs-id');

				// Gán action cho form
				deleteForm.action = '/Admin/Category/Delete?CategoryId=' + categoryId;
			});
		}

		btnDeleteCategory?.addEventListener('click', function () {
			deleteForm.submit();
		});
	});
</script>