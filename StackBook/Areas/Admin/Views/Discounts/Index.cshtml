@model X.PagedList.IPagedList<StackBook.Models.Discount>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Discount Management";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between">
        <h6 class="m-0 font-weight-bold text-primary">Discount List</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm">Create New</a>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Value</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DiscountName</td>
                            <td>@item.DiscountCode</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.StartDate.ToString("d")</td>
                            <td>@item.EndDate.ToString("d")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.DiscountId" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.DiscountId" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.DiscountId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- Pagination -->
            <div class="d-flex justify-content-end mt-4">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                         new PagedListRenderOptions
                {
                    Display = PagedListDisplayMode.IfNeeded,
                    UlElementClasses = new[] { "pagination" },
                    LiElementClasses = new[] { "page-item" },
                    PageClasses = new[] { "page-link" },
                    ActiveLiElementClass = "active",
                    PageCountAndCurrentLocationFormat = "Page {0} of {1}",
                    MaximumPageNumbersToDisplay = 5
                })
            </div>
        </div>
    </div>
</div>