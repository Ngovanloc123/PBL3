@model List<StackBook.Models.Book>

@{
    ViewData["Title"] = "Checkout";
    var totalItems = Model.Count;
    var totalPrice = Model.Sum(book => book.Price);
}

<div class="container my-4">
    <h1 class="text-center py-3 border-bottom bg-body-tertiary">
        Checkout
    </h1>

    @if (Model.Any())
    {
        <div class="row">
            <!-- Order Summary -->
            <div class="col-lg-6">
                <h3 class="mb-3">Order Summary</h3>
                <div class="table-responsive">
                    <table class="table align-middle text-center">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Book</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in Model)
                            {
                                <tr>
                                    <!-- Book Details -->
                                    <td class="text-start">
                                        <img src="@book.ImageURL" alt="@book.BookTitle" style="width: 60px; height: auto;" class="rounded me-2">
                                        <strong>@book.BookTitle</strong><br />
                                        <small>@string.Join(", ", book.Authors.Select(a => a.AuthorName))</small>
                                    </td>

                                    <!-- Quantity -->
                                    <td>
                                        <span>1</span>
                                    </td>

                                    <!-- Price -->
                                    <td>
                                        <strong>@book.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Total -->
                <div class="border-top pt-3">
                    <h5>Total (<span id="total-items">@totalItems</span> item(s)):</h5>
                    <span class="text-danger fs-4" id="total-price">
                        @totalPrice.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))
                    </span>
                </div>
            </div>

            <!-- Billing Information -->
            <div class="col-lg-6">
                <h3 class="mb-3">Billing Information</h3>

                <!-- Shipping Address -->
                <div class="mb-4">
                    <h5>Shipping Address</h5>
                    <div id="current-address" class="border p-3 rounded">
                        <p><strong>John Doe</strong></p>
                        <p>123 Main Street, City, Country</p>
                        <p>Phone: +123456789</p>
                        <button class="btn btn-link p-0" type="button" data-bs-toggle="modal" data-bs-target="#addressModal">
                            Change Address
                        </button>
                    </div>
                </div>

                <form method="post" asp-action="PlaceOrder">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="Email" required>
                    </div>

                    <div class="mb-3">
                        <label for="paymentMethod" class="form-label">Payment Method</label>
                        <select class="form-select" id="paymentMethod" name="PaymentMethod" required>
                            <option value="CreditCard">Credit Card</option>
                            <option value="PayPal">PayPal</option>
                            <option value="CashOnDelivery">Cash on Delivery</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success btn-lg w-100">Place Order</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            Your cart is empty. <a href="/" class="alert-link">Continue shopping</a>.
        </div>
    }
</div>

<!-- Address Modal -->
<div class="modal fade" id="addressModal" tabindex="-1" aria-labelledby="addressModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addressModalLabel">Địa Chỉ Của Tôi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Address List -->
                <div class="list-group">
                    <!-- Default Address -->
                    <div class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="address" id="address1" checked>
                            <label class="form-check-label" for="address1">
                                <strong>Ngô Văn Lộc</strong> <br>
                                K82/77, Nguyễn Lương Bằng, Phường Hòa Khánh Bắc, Quận Liên Chiểu, Đà Nẵng <br>
                                <span class="text-muted">(+84) 359 757 054</span>
                            </label>
                        </div>
                        <span class="badge bg-primary">Mặc định</span>
                        <button class="btn btn-link btn-sm">Cập nhật</button>
                    </div>

                    <!-- Other Address -->
                    <div class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="address" id="address2">
                            <label class="form-check-label" for="address2">
                                <strong>Ngô Văn Lộc</strong> <br>
                                34/21, Âu Cơ (cổng màu trắng), Phường Hòa Khánh Bắc, Quận Liên Chiểu, Đà Nẵng <br>
                                <span class="text-muted">(+84) 359 757 054</span>
                            </label>
                        </div>
                        <button class="btn btn-link btn-sm">Cập nhật</button>
                    </div>

                    <div class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="address" id="address3">
                            <label class="form-check-label" for="address3">
                                <strong>Ngô Lộc</strong> <br>
                                Thôn Thủy Phú, Phường Hương Vinh, Thành Phố Huế, Thừa Thiên Huế <br>
                                <span class="text-muted">(+84) 359 757 054</span>
                            </label>
                        </div>
                        <button class="btn btn-link btn-sm">Cập nhật</button>
                    </div>

                    <div class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="address" id="address4">
                            <label class="form-check-label" for="address4">
                                <strong>NGÔ VĂN LỘC</strong> <br>
                                Ktx Đhbk Đà Nẵng, Phường Hòa Khánh Bắc, Quận Liên Chiểu, Đà Nẵng <br>
                                <span class="text-muted">(+84) 359 757 054</span>
                            </label>
                        </div>
                        <button class="btn btn-link btn-sm">Cập nhật</button>
                    </div>
                </div>

                <!-- Add New Address Button -->
                <button class="btn btn-outline-primary w-100 mt-3" data-bs-toggle="modal" data-bs-target="#newAddressModal">
                    <i class="bi bi-plus-circle"></i> Thêm Địa Chỉ Mới
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Huỷ</button>
                <button type="button" class="btn btn-primary">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

<!-- New Address Modal -->
<div class="modal fade" id="newAddressModal" tabindex="-1" aria-labelledby="newAddressModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newAddressModalLabel">Thêm Địa Chỉ Mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="newFullName" class="form-label">Họ và Tên</label>
                        <input type="text" class="form-control" id="newFullName" required>
                    </div>
                    <div class="mb-3">
                        <label for="newPhone" class="form-label">Số Điện Thoại</label>
                        <input type="tel" class="form-control" id="newPhone" required>
                    </div>
                    <div class="mb-3">
                        <label for="newAddress" class="form-label">Địa Chỉ</label>
                        <textarea class="form-control" id="newAddress" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Lưu Địa Chỉ</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        function saveAddress() {
            const fullName = document.getElementById('newFullName').value;
            const phone = document.getElementById('newPhone').value;
            const address = document.getElementById('newAddress').value;

            if (fullName && phone && address) {
                const currentAddress = document.getElementById('current-address');
                currentAddress.innerHTML = `
                    <p><strong>${fullName}</strong></p>
                    <p>${address}</p>
                    <p>Phone: ${phone}</p>
                    <button class="btn btn-link p-0" type="button" data-bs-toggle="modal" data-bs-target="#addressModal">
                        Change Address
                    </button>
                `;
                const modal = bootstrap.Modal.getInstance(document.getElementById('addressModal'));
                modal.hide();
            } else {
                alert('Please fill out all fields.');
            }
        }
    </script>
}
