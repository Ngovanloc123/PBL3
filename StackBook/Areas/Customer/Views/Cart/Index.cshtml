@section Scripts {
    <script>
        function updateTotal() {
            const rows = document.querySelectorAll('tbody tr');
            let total = 0;
            let itemCount = 0;
            let subtotal = 0;
            let saveValue = 0;

            rows.forEach(row => {
            const checkbox = row.querySelector('.book-select');
            if (checkbox?.checked) {
                const priceText = row.querySelector('.book-price')?.textContent || "0";
                const originalPriceText = row.querySelector('.book-price small')?.textContent || "0";
                const quantitySpan = row.querySelector('td:nth-child(3) span');
                const price = parseFloat(priceText.replace(/[^0-9.]/g, '')) || 0;
                const originalPrice = parseFloat(originalPriceText.replace(/[^0-9.]/g, '')) || 0;
                const quantity = parseInt(quantitySpan?.textContent) || 0;

                subtotal += originalPrice * quantity;
                total += price * quantity;
                itemCount += quantity;
                saveValue += (originalPrice - price) * quantity;
            }
            });

            document.getElementById("total-price").textContent = total.toLocaleString('en-US', {
            style: 'currency',
            currency: 'USD'
            });
            document.getElementById("subtotal-price").textContent = subtotal.toLocaleString('en-US', {
            style: 'currency',
            currency: 'USD'
            });
            document.getElementById("save-value").textContent = saveValue.toLocaleString('en-US', {
            style: 'currency',
            currency: 'USD'
            });
            document.getElementById("summary-items-count").textContent = `${itemCount} ${itemCount < 2 ? 'book' : 'books'}`;
        }

        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll('.book-select').forEach(el => {
            el.addEventListener('change', updateTotal);
            });

            const selectAllCheckbox = document.getElementById('select-all');
            selectAllCheckbox?.addEventListener('change', function () {
            const checked = this.checked;
            document.querySelectorAll('.book-select').forEach(cb => {
                cb.checked = checked;
            });
            updateTotal();
            });

            updateTotal();
        });
    </script>
}