    var totalItems = Model.CartDetails?.Sum(cd => cd.Quantity) ?? 0; // real total items in cart
    var totalPrice = Model.CartDetails?.Sum(cd => (cd.Book?.Price ?? 0) * cd.Quantity) ?? 0; //real total price in cart
    var discountPercent = 24; // fake discount 24%
    var subTotal = Model.CartDetails?.Sum(cd => (cd.Book?.Price ?? 0) / (1 - discountPercent / 100.0)) ?? 0;
}

