@model StackBook.Models.Cart

@{
    ViewData["Title"] = "Shopping Cart";
    var totalItems = Model.CartDetails?.Sum(cd => cd.Quantity) ?? 0;
    var totalPrice = Model.CartDetails?.Sum(cd => (cd.Book?.Price ?? 0) * cd.Quantity) ?? 0;
}

<div class="container my-4">
    <h1 class="text-center py-3 border-bottom bg-body-tertiary">Shopping Cart</h1>

    @if (Model.CartDetails != null && Model.CartDetails.Any())
    {
        <div class="table-responsive">
            <table class="table align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>
                            <input type="checkbox" id="select-all" class="form-check-input" />
                        </th>
                        <th>Book</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var i = 0;
                        foreach (var cartDetail in Model.CartDetails)
                        {
                            var book = cartDetail.Book;
                            <tr>
                                <td>
                                    <input type="checkbox" class="form-check-input book-select" name="selectedBookVMs[@i].IsSelected" value="true"  form="checkout-form" />
                                    <input type="hidden" name="selectedBookVMs[@i].BookId" value="@book?.BookId" form="checkout-form" />
                                    <input type="hidden" name="selectedBookVMs[@i].Quantity" value="@cartDetail.Quantity" form="checkout-form" />
                                </td>
                                <td class="text-start">
                                    @if (book != null)
                                    {
                                        <div class="d-flex align-items-center mb-3">
                                            <a asp-controller="Category" asp-action="BookDetail" asp-route-bookId="@book.BookId">
                                                <img src="@book.ImageURL" class="img-thumbnail me-3" alt="Book" width="80">
                                            </a>
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">
                                                    <a asp-controller="Category" asp-action="BookDetail" asp-route-bookId="@book.BookId" class="text-decoration-none text-dark">
                                                        @book.BookTitle
                                                    </a>
                                                </h6>
                                                <small>by: @string.Join(", ", book.Authors.Select(a => a.AuthorName))</small>
                                            </div>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center align-items-center">
                                        <form asp-action="UpdateQuantity" method="post" class="me-1" style="display:inline;">
                                            <input type="hidden" name="userId" value="@Model.UserId" />
                                            <input type="hidden" name="bookId" value="@book?.BookId" />
                                            <input type="hidden" name="quantity" value="@(cartDetail.Quantity - 1)" />
                                            <button type="submit" class="btn btn-outline-primary btn-sm" @(cartDetail.Quantity <= 1 ? "disabled" : "")>-</button>
                                        </form>
                                        <span class="mx-2">@cartDetail.Quantity</span>
                                        <form asp-action="UpdateQuantity" method="post" class="ms-1" style="display:inline;">
                                            <input type="hidden" name="userId" value="@Model.UserId" />
                                            <input type="hidden" name="bookId" value="@book?.BookId" />
                                            <input type="hidden" name="quantity" value="@(cartDetail.Quantity + 1)" />
                                            <button type="submit" class="btn btn-outline-primary btn-sm">+</button>
                                        </form>
                                    </div>
                                </td>
                                <td>
                                    <strong class="book-price">
                                        $@(book != null ? (book.Price * cartDetail.Quantity) : 0)
                                    </strong>
                                </td>
                                <td>
                                    <form asp-action="RemoveFromCart" method="post" style="display:inline;">
                                        <input type="hidden" name="userId" value="@Model.UserId" />
                                        <input type="hidden" name="bookId" value="@book?.BookId" />
                                        <button type="submit" class="btn btn-danger btn-sm" title="Remove item">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>

            <form method="post" asp-action="Checkout" id="checkout-form">
                <div class="bg-light border-top fixed-bottom">
                    <div class="container py-3 d-flex justify-content-between align-items-center">
                        <div>
                            <strong>Total (<span id="total-items">@totalItems</span> Books):</strong>
                            <span class="text-danger fs-5 ms-2" id="total-price">
                                $@totalPrice
                            </span>
                            <div class="text-muted small">
                                You saved: <span class="text-success">$1.25</span>
                            </div>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-danger btn-lg">Checkout</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            Your cart is empty. <a href="/" class="alert-link">Continue shopping</a>.
        </div>
    }
</div>



@section Scripts {
    <script>
        function updateTotal() {
            const rows = document.querySelectorAll('tbody tr');
            let total = 0;
            let itemCount = 0;

            rows.forEach(row => {
                const checkbox = row.querySelector('.book-select');
                if (checkbox?.checked) {
                    const priceText = row.querySelector('.book-price')?.textContent || "0";
                    const quantitySpan = row.querySelector('td:nth-child(3) span');
                    const price = parseFloat(priceText.replace(/[^0-9.]/g, '')) || 0;
                    const quantity = parseInt(quantitySpan?.textContent) || 0;

                    total += price;
                    itemCount += quantity;
                }
            });

            document.getElementById("total-price").textContent = total.toLocaleString('en-US', {
                style: 'currency',
                currency: 'USD'
            });
            document.getElementById("total-items").textContent = itemCount;
        }

        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll('.book-select').forEach(el => {
                el.addEventListener('change', updateTotal);
            });

            const selectAllCheckbox = document.getElementById('select-all');
            selectAllCheckbox?.addEventListener('change', function () {
                const checked = this.checked; //
                document.querySelectorAll('.book-select').forEach(cb => {
                    cb.checked = checked;
                });
                updateTotal();
            });

            updateTotal();
        });
    </script>
}
