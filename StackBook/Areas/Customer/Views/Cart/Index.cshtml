@model List<StackBook.Models.Book>

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container-fluid">
    <h1 class="text-center my-4 py-2 border-bottom bg-body-tertiary">
        Shopping Cart
    </h1>

    <div class="row d-flex justify-content-center my-4">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    @foreach (var book in Model)
                    {
                        <div class="row mb-4">
                            <div class="col-2  mb-3 mb-lg-0">
                                <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                                    <img src="@book.ImageURL" class="w-100" alt="@book.BookTitle" />
                                    <a href="#!">
                                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                    </a>
                                </div>
                            </div>

                            <div class="col-8  mb-3 mb-lg-0">
                                <p><strong>@book.BookTitle</strong></p>
                                <p>@string.Join(", ", book.Authors.Select(a => a.AuthorName))</p>
                                

                                <div class=" mb-4" style="max-width: 180px">
                                    <div class="btn-group me-2" role="group" aria-label="First group">
                                        <button class="btn btn-primary px-3 me-2"
                                                onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <div class="form-outline">
                                            <input min="1" name="quantity" value="1" type="number" class="form-control" />
                                            @* <label class="form-label">Quantity</label> *@
                                        </div>
                                        <button class="btn btn-primary px-3 ms-2"
                                                onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-danger btn-sm me-1 mb-2" title="Remove item">
                                    <i class="fas fa-trash"></i>
                                </button>

                                
                            </div>

                            <div class="col-lg-2 mb-3 mb-lg-0">
                                <p class="text-end">
                                    <strong>@book.Price.ToString("C")</strong>
                                </p>
                            </div>
                        </div>

                        <hr class="my-4" />
                    }
                    @* Subtotal (2 items): $23.17 *@
                    <p class="text-end">
                        <strong>Subtotal (): $@Model.Sum(b => b.Price)</strong>
                    </p>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <p><strong>Expected shipping delivery</strong></p>
                    <p class="mb-0">12.10.2020 - 14.10.2020</p>
                </div>
            </div>

            <div class="card mb-4 mb-lg-0">
                <div class="card-body">
                    <p><strong>We accept</strong></p>
                    <img class="me-2" width="45px" src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg" alt="Visa" />
                    <img class="me-2" width="45px" src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg" alt="American Express" />
                    <!-- thêm hình thức thanh toán khác -->
                </div>
            </div>
        </div>
    </div>
</div>
