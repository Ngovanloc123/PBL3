@model List<StackBook.Models.Order>;

@{
    int statusCode = ViewBag.Status;
    string statusText = statusCode switch
    {
        0 => "My Orders",
        1 => "Pending Orders",
        2 => "Delivering Orders",
        3 => "Cancelled Orders",
        4 => "Delivered Orders",
        5 => "Returned Orders",
        _ => "My Orders"
    };

    ViewData["Title"] = statusText;
}

<div class="container py-4">
    <div class="row">
        <!-- Sidebar Section -->
        @await Html.PartialAsync("_SideBar", (User)ViewBag.User)

        <!-- Main Content Section -->
        <div class="col-md-9">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <!-- Orders Tab -->
                    <div class="mb-4">
                        @await Html.PartialAsync("_OrderTab")
                    </div>

                    <!-- Orders List -->
                    <div>
                        @await Html.PartialAsync("_OrderList", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>