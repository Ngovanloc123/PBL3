@model StackBook.Models.User;

<div class="col-md-3">
    <div class="text-center mb-4 avatar">
        <div class="avatar-container">
            <img src="@(string.IsNullOrEmpty(Model.AvatarUrl) ? "https://www.gravatar.com/avatar/default?s=200&d=mp" : Model.AvatarUrl)" alt="Profile Avatar">
        </div>
        <h5>@Model.FullName</h5>
    </div>
    <ul class="nav flex-column nav-pills">
        <!-- Notifications -->
        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Notifications" ? "active" : "")"
               asp-area="Customer"
               asp-controller="Account"
               asp-action="Notifications">
                <img src="https://down-vn.img.susercontent.com/file/e10a43b53ec8605f4829da5618e0717c"
                     class="me-2" width="20" alt="Notifications"> Notifications
            </a>
        </li>

        <!-- My Profile -->
        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")"
               asp-area="Customer"
               asp-controller="Account"
               asp-action="Profile">
                <img src="https://down-vn.img.susercontent.com/file/ba61750a46794d8847c3f463c5e71cc4"
                     class="me-2" width="20" alt="Profile"> My Profile
            </a>
        </li>

        <!-- Orders -->
        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
               asp-area="Customer"
               asp-controller="Order"
               asp-action="Index">
                <img src="https://down-vn.img.susercontent.com/file/f0049e9df4e536bc3e7f140d071e9078"
                     class="me-2" width="20" alt="Orders"> Orders
            </a>
        </li>

        <!-- Vouchers -->
        <li class="nav-item">
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Vouchers" ? "active" : "")"
               asp-area="Customer"
               asp-controller="Account"
               asp-action="Vouchers">
                <img src="https://down-vn.img.susercontent.com/file/84feaa363ce325071c0a66d3c9a88748"
                     class="me-2" width="20" alt="Vouchers"> Vouchers
            </a>
        </li>
    </ul>
</div>

<style>
    .avatar {
        text-align: center !important;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .avatar-container {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        overflow: hidden;
        position: relative;
        margin-right: 0;
    }

    .nav-link.active {
        background-color: #007bff;
        color: white;
    }

    .avatar-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

</style>