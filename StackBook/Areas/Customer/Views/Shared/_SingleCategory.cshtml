@model StackBook.Models.Category




<div class="container-fluid">
    <h1 class="text-center my-4 py-2 border-bottom bg-body-tertiary">
		<span class="fw-light">Explore</span> @Model.CategoryName
    </h1>

    @await Component.InvokeAsync("SliderCategory")

    

    @* =================  CONTENT ============== *@
    <div class="content">
        <section class="category-section mb-5">
            <div class="d-flex justify-content-between mt-5 pb-2 border-bottom">
                <h2 class="">Popular</h2>
                <a asp-controller="Category" asp-action="Books" class="text-decoration-none">See more</a>
            </div>
            <div class="container-books category1">
                <button id="prev-card" class="fa-solid fa-arrow-left card-button"></button>
                <div class="book-list">

                    @foreach (var book in Model.Books)
                    {
                        <a asp-controller="Category" asp-action="BookDetail" asp-route-bookId="@book.BookId" class="book-card text-decoration-none text-black">
                            <img src="@book.ImageURL" alt="@book.BookTitle">
                            <div class="book-title">@book.BookTitle</div>
                            <div class="book-rating">⭐ 4.4 (619)</div>
                            <div class="fs-8">
                                @foreach (var author in book.Authors)
                                {
                                    <div>@author.AuthorName</div>
                                }
                            </div>
                            <div class="book-price">$@book.Price</div>

                        </a>
                    }
                </div>
                <button id="next-card" class="fa-solid fa-arrow-right card-button"></button>
            </div>
        </section>


        @* =============== Deals =============== *@
        <section class="category-section mb-5">
            <div class="d-flex justify-content-between mt-5 pb-2 border-bottom">
