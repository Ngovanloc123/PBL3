                            <div class="fs-8">
                                @foreach (var author in book.Authors)
                                {
                                    <div>@author.AuthorName</div>
                                }
                            </div>
                            <div class="book-price">$@book.Price</div>

                        </a>
                    }
                </div>
                <button id="next-card" class="fa-solid fa-arrow-right card-button"></button>
            </div>
        </section>

        @* =============== New releases =============== *@
