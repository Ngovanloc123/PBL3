            </div>
        </section>

        @* =============== Explore more =============== *@
        <div class="d-flex justify-content-between mt-5 pb-2 border-bottom">
            <h2 class="">Explore more</h2>
            @* <a href="" class="text-decoration-none">See more</a> *@
        </div>
        @* ============ CONTENT ========= *@ 
        <div class="row g-4">
            @await Component.InvokeAsync("Books", Model)
        </div>
    </div>
</div>