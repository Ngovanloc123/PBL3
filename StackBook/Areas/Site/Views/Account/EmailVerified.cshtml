@model StackBook.Models.User
@{
    ViewData["Title"] = "Email Verification";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="alert alert-success mt-5">
                <h4 class="alert-heading">Email Verified Successfully!</h4>
                <p>Your email address @Model.Email has been successfully verified.</p>
                <hr>
                <p class="mb-0">You can now login to your account.</p>
                <a href="/Site/Account/Signin" class="btn btn-primary mt-3">Go to Login</a>
            </div>
        </div>
    </div>
</div>