@model StackBook.ViewModels.UserVM.ForgotPasswordVM
@{
    ViewData["Title"] = "Forgot Password";
}

<head>
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
</head>

<body>
    <section>
        <div class="account-box">
            <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                <h2>Forgot Password</h2>

                <div class="input-box">
                    <span class="icon"><i class="fa-solid fa-envelope"></i></span>
                    <input asp-for="Email" type="email" required />
                    <label>Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit">Send Reset Link</button>

                @if (ViewData["Success"] != null)
                {
                    <div class="text-success">@ViewData["Success"]</div>
                }

                @if (ViewData["Error"] != null)
                {
                    <div class="text-danger">@ViewData["Error"]</div>
                }

                <div class="register-link">
                    <p>Back to
                        <a asp-controller="Account" asp-action="SignInUser">Sign In</a>
                    </p>
                </div>
            </form>
        </div>
    </section>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
