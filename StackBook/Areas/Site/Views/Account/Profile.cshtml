@model StackBook.Models.User

@{
    Layout = "_Layout";
}

<h2>User Profile</h2>

<div>
    <p><strong>Username:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <!-- Hiển thị thêm các thông tin khác nếu có -->
</div>

<h3>Update Profile</h3>

<form method="post" action="/Account/Update/@Model.UserId">
    <div>
        <label for="username">Username</label>
        <input type="text" id="username" name="username" value="@Model.FullName" required />
    </div>
    <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="@Model.Email" required />
    </div>
    <button type="submit">Update Profile</button>
</form>

<h3>Change Password</h3>

<form method="post" action="/Account/UpdatePassword/@Model.UserId">
    <div>
        <label for="currentPassword">Current Password</label>
        <input type="password" id="currentPassword" name="currentPassword" required />
    </div>
    <div>
        <label for="newPassword">New Password</label>
        <input type="password" id="newPassword" name="newPassword" required />
    </div>
    <button type="submit">Change Password</button>
</form>

<h3>Logout</h3>
<form method="get" action="/Account/Logout">
    <button type="submit">Logout</button>
</form>
