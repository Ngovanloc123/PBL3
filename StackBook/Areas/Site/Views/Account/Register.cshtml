@model StackBook.DTOs.RegisterDto
@{
    ViewData["Title"] = "Register";
}

<head>
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
</head>

<body>
    <section>
        <div class="account-box">
            <form asp-area="Site" asp-controller="Account" asp-action="RegisterUser" method="post">
                <h2>Register</h2>

                <div class="input-box">
                    <span class="icon"><i class="fa-solid fa-user"></i></span>
                    <input asp-for="Username" required />
                    <label asp-for="Username">Username</label>
                </div>

                <div class="input-box">
                    <span class="icon"><i class="fa-solid fa-envelope"></i></span>
                    <input asp-for="Email" type="email" required />
                    <label asp-for="Email">Email</label>
                </div>

                <div class="input-box">
                    <span class="icon"><i class="fa-solid fa-lock"></i></span>
                    <input asp-for="Password" type="password" required />
                    <label asp-for="Password">Password</label>
                </div>

                @* Confirm password không nằm trong DTO nên bạn cần xử lý riêng *@
                <div class="input-box">
                    <span class="icon"><i class="fa-solid fa-unlock"></i></span>
                    <input type="password" name="ConfirmPassword" required />
                    <label>Confirm password</label>
                </div>

                <button type="submit">Register</button>

                <div class="register-link">
                    <p>Already have an account? <a asp-area="Site" asp-controller="Account" asp-action="Signin">Sign in</a></p>
                </div>
            </form>
        </div>
    </section>
</body>
