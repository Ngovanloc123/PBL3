@model StackBook.ViewModels.UserVM.ResetPasswordVM
@{
    ViewData["Title"] = "Reset Password";
}

<head>
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
</head>

<body>
    <section>
        <div class="account-box">
            <form asp-action="ResetPassword" asp-controller="Account" method="post">
                <h2>Reset Password</h2>

                <input type="hidden" asp-for="Token" />

                <div class="input-box">
                    <span class="icon"><i class="fa-solid fa-lock"></i></span>
                    <input asp-for="NewPassword" required />
                    <label>New Password</label>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="input-box">
                    <span class="icon"><i class="fa-solid fa-lock"></i></span>
                    <input asp-for="ConfirmPassword" required />
                    <label>Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit">Reset Password</button>

                @if (ViewData["Success"] != null)
                {
                    <div class="text-success">@ViewData["Success"]</div>
                }

                @if (ViewData["Error"] != null)
                {
                    <div class="text-danger">@ViewData["Error"]</div>
                }

                <div class="register-link">
                    <p>Back to <a asp-controller="Account" asp-action="SignInUser">Sign In</a></p>
                </div>
            </form>
        </div>
    </section>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
