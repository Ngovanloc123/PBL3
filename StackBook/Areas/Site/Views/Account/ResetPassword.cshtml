@model StackBook.ViewModels.UserVM.ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Smooch+Sans:wght@100..900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
</head>

<body class="login-body">
    <div class="login-container">
        <div class="login-box">
            <div class="login-left">
                <form asp-controller="Account" asp-action="ResetPassword" method="post">
                    <h2>Reset Password</h2>
                    <p>Welcome to StackBook</p>

                    <div class="form-group">
                        <span class="form-icon">
                            <i class="fa-regular fa-envelope"></i>
                        </span>
                        <input asp-for="NewPassword" type="NewPassword" placeholder="New Password" required />
                    </div>
                    <div class="form-group">
                        <span class="form-icon">
                            <i class="fa-regular fa-envelope"></i>
                        </span>
                        <input asp-for="ConfirmPassword" type="ConfirmPassword" placeholder="Confirm Password" required />
                    </div>
                    <button type="submit" class="login-btn">Reset Password</button>
                    @if (ViewData["Success"] != null)
                    {
                        <div class="text-success">@ViewData["Success"]</div>
                    }

                    @if (ViewData["Error"] != null)
                    {
                        <div class="text-danger">@ViewData["Error"]</div>
                    }



                    <div class="register-link ">
                        <p>
                            Back to
                            <a asp-controller="Account" asp-action="SignInUser">Sign In</a>
                        </p>
                    </div>
                </form>
            </div>

            <div class="login-right">
                <div class="img-bg">
                </div>
            </div>
        </div>
    </div>
</body>