@model StackBook.DTOs.SignInDto
@{
    ViewData["Title"] = "Sign In";
}
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Smooch+Sans:wght@100..900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
</head>

<body class="login-body">
    <div class="login-container">
        <div class="login-box">
            <div class="login-left">
                <form asp-controller="Account" asp-action="SignInUser" method="post">
                    <h2>Sign In</h2>
                    <p>Welcome to StackBook</p>

                    <div class="form-group">
                        <span class="form-icon">
                            <i class="fa-regular fa-envelope"></i>
                        </span>
                        <input asp-for="Email" type="email" placeholder="Email" required />
                    </div>
                    @if (ViewData["EmailError"] != null)
                    {
                        <span class="text-danger">@ViewData["EmailError"]</span>
                    }

                    <div class="form-group">
                        <span class="form-icon">
                            <i class="fa-solid fa-lock"></i>
                        </span>
                        <input asp-for="Password" type="password" placeholder="Password" required />
                    </div>
                    @if (ViewData["PasswordError"] != null)
                    {
                        <span class="text-danger">@ViewData["PasswordError"]</span>
                    }


                    <div class="remember-forgot">
                        <label><input type="checkbox" /> Remember me</label>
                        <a href="#">Forgot Password?</a>
                    </div>

                    <button type="submit" class="login-btn">Sign In</button>

                    <div class="divider">
                        <span>or</span>
                    </div>

                    <div class="social-login">
                        <a href="Site/Account/google-redirect" class="google-btn">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/3c/Google_Favicon_2025.svg/1024px-Google_Favicon_2025.svg.png" alt="Google Logo" /> Sign in with Google
                        </a>
                    </div>

                    <div class="register-link">
                        <p>Don't have an account?
                            <a asp-controller="Account" asp-action="Register">Register</a>
                        </p>
                    </div>
                </form>
            </div>

            <div class="login-right">
                <div class="img-bg">
                    @* <div class="img-overlay"> *@
                    @*     <img src="/images/logos/Logo.png" alt="Logo" class="overlay-logo" /> *@
                    @* </div> *@
                </div>
            </div>
        </div>
    </div>

    @if (TempData["AccessToken"] != null && TempData["RefreshToken"] != null)
    {
        <script>
            var accessToken = '@TempData["AccessToken"]';
            var refreshToken = '@TempData["RefreshToken"]';
            localStorage.setItem('accessToken', accessToken);
            localStorage.setItem('refreshToken', refreshToken);
            var userId = '@TempData["UserId"]';
            window.location.href = `/Account/Profile/${userId}`;
        </script>
    }
</body>
