@model StackBook.Dto.RegisterDto
<head>
	<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
</head>

<body>
	<section>
		<div class="account-box">
			<form asp-action="Register" method="post">
				<h2>Register</h2>

				<div class="input-box">
					<span class="icon"><i class="fa-solid fa-user"></i></i></span>
					<input type="text" required asp-for="Username"/>
					<span asp-validation-for="Username" class="text-danger"></span>
					<label>Username</label>
				</div>

				<div class="input-box">
					<span class="icon"><i class="fa-solid fa-envelope"></i></span>
					<input type="email" required asp-for="Email"/>
					<span asp-validation-for="Email" class="text-danger"></span>
					<label>Email</label>
				</div>

				<div class="input-box">
					<span class="icon"><i class="fa-solid fa-lock"></i></span>
					<input type="password" required asp-for="Password"/>
					<span asp-validation-for="Password" class="text-danger"></span>
					<label>Password</label>
				</div>

				<div class="input-box">
					<span class="icon"><i class="fa-solid fa-unlock"></i></span>
					<input type="password" required asp-for="Password"/>
					<span asp-validation-for="Password" class="text-danger"></span>
					<label>Confirm password</label>
				</div>

				@* <div class="remember-forgot"> *@
				@* 	<label><input type="checkbox" />Remember me</label> *@
				@* 	<a href="#">Forgot Password?</a> *@
				@* </div> *@
				<button type="submit">Register</button>
				<div class="register-link">
					<p>Already have a account??<a asp-controller="Account" asp-action="Signin">Signin</a></p>
				</div>
			</form>
		</div>
	</section>
</body>