<div class="row swiper">
    @if (Model != null && Model.Any())
    {
        <div class="books-slider">
            <!-- Navigation buttons -->
            <div class="swiper-button-prev">
                <i class="fa-solid fa-chevron-left"></i>
            </div>
            <div class="swiper-button-next">
                <i class="fa-solid fa-chevron-right"></i>
            </div>

            <ul class="swiper-wrapper">
                @foreach (var bookRating in Model)
                {
                    <li class="swiper-slide col-4">
                        <a asp-area="Customer" asp-controller="Category" asp-action="BookDetail"
                            asp-route-bookId="@bookRating?.Book.BookId"
                            class="text-decoration-none text-black d-flex gap-4 h-100">

                            <div class="slider-image postion-relative col-5">
                                <img src="@bookRating?.Book.ImageURL" alt="@bookRating?.Book.BookTitle"
                                    class="w-100 h-100 object-fit-cover" />
                            </div>

                            <div class="col-6">
                                <div class="d-flex flex-column h-100 justify-content-between pt-4">
                                    <h3 class="book-slide-title fw-semibold">@bookRating?.Book.BookTitle</h3>

                                    <div class="fs-8 text-muted">
                                        @if (bookRating?.Book!.Authors != null && bookRating.Book.Authors.Any())
                                        {
                                            foreach (var author in bookRating.Book.Authors.Take(1))
                                            {
                                                <div>@author.AuthorName</div>
                                            }
                                        }
                                    </div>

                                    <div class="book-price text-danger fw-semibold">
                                        $@bookRating?.Book?.Price
                                    </div>

                                    <form class="w-100" method="post" action="/add">
                                        <input type="hidden" name="bookId" value="34780479-6493-46df-ba28-10c14c4711d6">
                                        <button type="submit" class="btn btn-primary rounded-2 py-2 text-uppercase fw-bold">
                                            <i class="fa-solid fa-cart-shopping"></i> Add to Cart
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
    }
</div>


