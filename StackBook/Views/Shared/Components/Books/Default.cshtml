@model X.PagedList.IPagedList<StackBook.ViewModels.BookRatingViewModel>
@using X.PagedList.Mvc.Core

@{
    var routeValues = ViewBag.RouteValues as RouteValueDictionary ?? new RouteValueDictionary();
    string action = ViewBag.ActionName as string;
}


<div class="row swiper">
    @if (Model != null && Model.Any())
    {
        <div class="books-slider">
            <!-- Navigation buttons -->
            <div class="swiper-button-prev">
                <i class="fa-solid fa-chevron-left"></i>
            </div>
            <div class="swiper-button-next">
                <i class="fa-solid fa-chevron-right"></i>
            </div>

            <ul class="swiper-wrapper">
                @foreach (var bookRating in Model)
                {
                    <li class="swiper-slide col-4">
                        <a asp-area="Customer" asp-controller="Category" asp-action="BookDetail"
                           asp-route-bookId="@bookRating?.Book.BookId"
                           class="text-decoration-none text-black d-flex gap-4 h-100">

                            <div class="slider-image postion-relative col-5">
                                <img src="@bookRating?.Book.ImageURL" alt="@bookRating?.Book.BookTitle"
                                     class="w-100 h-100 object-fit-cover rounded-1" />
                            </div>

                            <div class="col-6">
                                <div class="d-flex flex-column h-100 pt-4 justify-content-end">
                                    <h5 class="book-slide-title fw-semibold">@bookRating?.Book.BookTitle</h5>

                                    <div class="book-rating text-warning mb-1">
                                        <small class="text-warning">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Math.Floor(bookRating.AverageRating))
                                                {
                                                    <i class="fas fa-star"></i>
                                                }
                                                else if (i - 0.5 <= bookRating.AverageRating)
                                                {
                                                    <i class="fas fa-star-half-alt"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star"></i>
                                                }
                                            }
                                        </small>
                                    </div>

                                    <div class="fs-8 text-muted">
                                        @if (bookRating?.Book!.Authors != null && bookRating.Book.Authors.Any())
                                        {
                                            foreach (var author in bookRating.Book.Authors.Take(1))
                                            {
                                                <medium>@author.AuthorName</medium>
                                            }
                                        }
                                    </div>



                                    <div class="book-price text-danger fw-semibold">
                                        @* $@bookRating?.Book?.Price *@
                                        @{
                                            // Tính toán giá gốc và phần trăm giảm
                                            var discountPercent = 24; // 24%
                                            var originalPrice = bookRating?.Book?.Price / (1 - discountPercent / 100.0);
                                        }

                                        <h6 class="me-3 mb-0">
                                            @bookRating?.Book?.Price.ToString("C")
                                            <span class="text-decoration-line-through text-muted ms-1 fw-light fs-6">@originalPrice?.ToString("C")</span>
                                        </h6>

                                    </div>

                                    <form class="w-100 mt-4" asp-area="Customer" asp-action="AddToCart" asp-controller="Cart" method="post">
                                        <input type="hidden" name="bookId" value="@bookRating?.Book.BookId">
                                        @if (bookRating?.Book.Stock > 0)
                                        {
                                            <input type="hidden" name="quantity" value="1">
                                            <button type="submit" class="btn btn-primary rounded-2 py-2 fw-medium">
                                                <i class="fa-solid fa-cart-shopping pe-1"></i> Add to Cart
                                            </button>
                                        }
                                        else
                                        {
                                            <input type="hidden" name="quantity" value="0">
                                            <button type="submit" class="btn btn-danger rounded-2 py-2 fw-medium" disabled>
                                                <i class="fa-solid fa-fire"></i> Out of Stock
                                            </button>
                                        }

                                    </form>
                                </div>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
    }
</div>


<style>
    .book-slide-title {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .swiper-button-prev,
    .swiper-button-next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 40px;
        height: 40px;
        background: white;
        border-radius: 50%;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #333;
        z-index: 10;
        cursor: pointer;
    }

    .swiper-button-prev {
        left: 10px;
    }

    .swiper-button-next {
        right: 10px;
    }

        .swiper-button-prev::after,
        .swiper-button-next::after {
            display: none;
        }
</style>