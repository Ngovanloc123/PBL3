            </ul>

            <!-- Search Bar -->
            <form class="d-flex me-3" method="get" asp-area="Customer" asp-controller="Category" asp-action="Search">
                <div class="input-group custom-search-group">
                    <input type="text" class="form-control custom-search-input" placeholder="Search books..." name="s" />
                    <button class="btn custom-search-btn" type="submit">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </div>
            </form>

            <!-- Sign In Button -->
            <div class="d-flex align-items-center me-2">
                @if (User.Identity!.IsAuthenticated)
                {
                    <div class="dropdown">
                        <button class="btn btn-account dropdown-toggle" type="button" id="accountDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-user"></i>  Hello, @User.Identity.Name
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end custom-dropdown-menu" aria-labelledby="accountDropdown">
                            <li>
                                <a class="dropdown-item custom-dropdown-item" asp-area="Customer" asp-controller="Account" asp-action="Profile">
                                    <i class="fa-solid fa-id-card me-2"></i> Profile
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item custom-dropdown-item" asp-area="Site" asp-controller="Account" asp-action="Signout">
                                    <i class="fa-solid fa-arrow-right-from-bracket me-2"></i> Sign out
                                </a>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a asp-area="Site" asp-controller="Account" asp-action="Signin" class="btn btn-account fw-semibold">
                        <i class="fa-solid fa-user"></i>  Hello, sign in
                    </a>
                }
            </div>


            <!-- Notification Icon -->
            <div class="d-flex align-items-center navbar-icon">
                <a href="#" class="btn btn-custom position-relative">
                    <i class="fa-solid fa-bell"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        3
                    </span>
                </a>
            </div>

            <!-- Cart Icon -->
            <div class="d-flex align-items-center navbar-icon">
                <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="btn btn-custom position-relative">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        @ViewBag.CartCount
                    </span>
                </a>
            </div>
        </div>
    </div>
