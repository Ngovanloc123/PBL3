<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/images/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/images/favicon/favicon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon/favicon-16x16.png" />

    @* Link SWwiperJS CSS *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StackBook.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    

</head>

<body>
    <header>
        @* <partial name="_Navbar" /> *@
        @* @await Html.PartialAsync("_Navbar") *@
        @await Component.InvokeAsync("Navbar")
    </header>

    @* ================== PHẦN BODY PAGE ================== *@
    <div style="margin-top: 80px;">
        <main role="main" class="pb-3" style="background-color: #e7e4e436;">
            @* <partial name="_Notification" /> *@
            @await Html.PartialAsync("_Notification")
            
            @* Hiển thị nội dung của từng View con. *@
            @RenderBody()
            <a asp-area="Customer" asp-action="Index" asp-controller="Recommend">
                <div class="ChatAI">
                    <img class="" src="~/images/KIEN2.jpg" />
                </div>
            </a>
        </main>
    </div>

    @* <partial name="_Footer" /> *@
    @await Html.PartialAsync("_Footer")


    @* Link SWwiperJS JS *@
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/yyezntleek03s7fje40wjjnc78wutpig0qjp73zqym1ieknk/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .ChatAI {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 60px;
        height: 60px;
        background-color: #007bff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        z-index: 1000;
    }

    .ChatAI img {
        width: 58px; /* Chiều rộng ảnh nhỏ lại */
        height: 58px; /* Chiều cao ảnh nhỏ lại */
            border-radius: 50%;
        object-fit: contain; /* Đảm bảo không bị méo */
    }

</style>